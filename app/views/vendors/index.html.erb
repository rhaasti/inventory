<h3> all vendors </h3>

<div class ="table-div">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>

        <th scope="col">Vendor</th>
        <th scope="col">Created On</th>
      </tr>
    </thead>

    <tbody>

      <% @vendors = @vendors.sort_by { |vendor| vendor.name } %>

      <% @vendors.each do |vendor| %>
        <tr data-link="<%= vendor_path(vendor) %>">

            <td><%= vendor.name %></td>
            <td><%= vendor.created_at.strftime("%a, %b %-d %Y") %></td>
      <% end %>
        </tr>
    </tbody>
  </table>
</div>


