<h1> <%= @item.name %> </h1>
<h2> <%= @item.vendor.name %> </h2>
<p> created by: <%= @item.user.email.split("@")[0] %> </p>
<p> value: <%= number_to_currency(@item.value, precision:2) %> per <%= @item.purchase_type %></p>
<p> purchase as: <%= @item.purchase_type.pluralize %>
<p> count as: <%= @item.count_type.pluralize %>, which is <%= @item.count_measurement %> <%= @item.purchase_type.pluralize %>

<% @updated_at = [] %>
      <% @item.item_cycle_counts.each do |item_cycle_count| %>
        <%  @updated_at.push(item_cycle_count.updated_at) %>
      <% end %>
  <div class="col-sm-3">

  </div>

  <div class="col-sm-3">
    <% if @item.item_cycle_counts.present?%>
  <p>
    current on-hand: <%= @item.item_cycle_counts.find_by(updated_at:@updated_at.last).item_quantity %> <br>
    last updated on: <%= @updated_at.last.strftime("%a, %b %-d %Y") %> @ <%=@updated_at.last.strftime("%H:%M") %> UTC
    <% @item.item_cycle_counts.each do |item_cycle_count| %>
  </p>
  <p>
      <%= item_cycle_count.user.email.split("@")[0] %>
      counted <%= item_cycle_count.item_quantity %>
      on <%= item_cycle_count.updated_at.strftime("%a, %b %-d %Y") %> @ <%=item_cycle_count.updated_at.strftime("%H:%M") %> UTC
    <% end %>
  </p>
    <% end %>
  </div>

<%= link_to "all items", items_path %>
